{
  "name": "changlee-learning-capsule",
  "version": "1.0.0",
  "description": "长离的学习胶囊 - 情感陪伴式桌面宠物英语学习应用",
  "main": "src/main/main.js",
  "homepage": "./",
  "author": {
    "name": "Changlee Team",
    "email": "changlee@example.com"
  },
  "license": "UNLICENSED",
  "keywords": [
    "Changlee",
    "english-learning",
    "ai-companion",
    "electron",
    "education"
  ],
  "scripts": {
    "start": "node easy_start.js",
    "start-web": "node easy_start.js --web",
    "start-desktop": "node easy_start.js --desktop",
    "start-dev": "node easy_start.js --dev",
    "start-with-rag": "node start_with_rag.js",
    "backend": "node src/backend/server.js",
    "electron": "wait-on http://localhost:3001 && electron .",
    "electron-dev": "ELECTRON_IS_DEV=1 electron .",
    "build": "npm run build-renderer && npm run build-electron",
    "build-renderer": "cd src/renderer && npm run build",
    "build-electron": "electron-builder",
    "dev": "concurrently \"npm run backend\" \"npm run electron-dev\"",
    "dev-with-rag": "node start_with_rag.js",
    "test": "jest",
    "test-rag": "node test_rag_integration.js",
    "demo": "node demo.js",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "status": "node start_with_rag.js --status",
    "help": "node easy_start.js --help"
  },
  "dependencies": {
    "electron": "^27.0.0",
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "cors": "^2.8.5",
    "axios": "^1.6.0",
    "node-cron": "^3.0.3",
    "electron-store": "^8.1.0",
    "auto-launch": "^5.0.5",
    "form-data": "^4.0.0",
    "multer": "^1.4.5-lts.1",
    "open": "^8.4.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0",
    "electron-builder": "^24.6.4",
    "jest": "^29.7.0",
    "eslint": "^8.52.0",
    "prettier": "^3.0.3"
  },
  "build": {
    "appId": "com.changlee.learning-capsule",
    "productName": "长离的学习胶囊",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "database/**/*",
      "config/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.education",
      "icon": "assets/images/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/images/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/images/icon.png"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/changlee-team/learning-capsule.git"
  }
}