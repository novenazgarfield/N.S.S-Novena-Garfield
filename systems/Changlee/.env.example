# Changlee桌面宠物 - 环境变量配置示例
# 复制此文件为 .env 并填入您的配置

# ===========================================
# 混合AI服务配置
# ===========================================

# 启用混合AI功能
HYBRID_AI_ENABLED=true

# 首选AI服务类型 (auto, local, gemini, deepseek, openai)
PREFERRED_AI_SERVICE=auto

# 启用AI服务回退机制
AI_FALLBACK_ENABLED=true

# AI请求超时时间 (毫秒)
AI_TIMEOUT=30000

# AI请求重试次数
AI_RETRY_ATTEMPTS=2

# ===========================================
# 本地AI配置
# ===========================================

# 启用本地AI服务
LOCAL_AI_ENABLED=true

# 本地AI服务URL
LOCAL_AI_URL=http://localhost:8001

# 本地AI模型名称
LOCAL_MODEL_NAME=google/gemma-2-2b

# 最大内存使用量 (GB)
MAX_MEMORY_GB=4.0

# 启用模型量化 (节省内存)
USE_QUANTIZATION=false

# AI计算设备 (auto, cpu, cuda)
AI_DEVICE=auto

# ===========================================
# Gemini API配置
# ===========================================

# Gemini API密钥 (从 https://makersuite.google.com/app/apikey 获取)
GEMINI_API_KEY=your_gemini_api_key_here

# Gemini模型名称
GEMINI_MODEL=gemini-1.5-flash

# Gemini API超时时间
GEMINI_TIMEOUT=30000

# Gemini最大生成token数
GEMINI_MAX_TOKENS=256

# Gemini生成温度
GEMINI_TEMPERATURE=0.7

# ===========================================
# DeepSeek API配置
# ===========================================

# DeepSeek API密钥 (从 https://platform.deepseek.com 获取)
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# DeepSeek模型名称
DEEPSEEK_MODEL=deepseek-chat

# DeepSeek API基础URL
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1

# DeepSeek API超时时间
DEEPSEEK_TIMEOUT=30000

# DeepSeek最大生成token数
DEEPSEEK_MAX_TOKENS=256

# DeepSeek生成温度
DEEPSEEK_TEMPERATURE=0.7

# ===========================================
# OpenAI API配置 (可选)
# ===========================================

# OpenAI API密钥
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI模型名称
OPENAI_MODEL=gpt-3.5-turbo

# OpenAI API基础URL
OPENAI_BASE_URL=https://api.openai.com/v1

# OpenAI API超时时间
OPENAI_TIMEOUT=30000

# ===========================================
# 性能优化配置
# ===========================================

# 启用AI响应缓存
AI_CACHE_ENABLED=true

# 缓存大小 (条目数)
AI_CACHE_SIZE=100

# 缓存生存时间 (秒)
AI_CACHE_TTL=3600

# 启用内存优化
MEMORY_OPTIMIZATION=true

# 启用批处理
BATCH_PROCESSING=false

# 最大并发请求数
MAX_CONCURRENT_REQUESTS=5

# ===========================================
# 安全配置
# ===========================================

# 启用请求频率限制
RATE_LIMITING_ENABLED=true

# 每分钟最大请求数
MAX_REQUESTS_PER_MINUTE=60

# 频率限制时间窗口 (毫秒)
RATE_LIMIT_WINDOW=60000

# 最大提示词长度
MAX_PROMPT_LENGTH=1000

# 启用输入清理
SANITIZE_INPUT=true

# 记录用户输入 (调试用)
LOG_USER_INPUTS=false

# 数据保留天数
DATA_RETENTION_DAYS=30

# 启用数据匿名化
ANONYMIZE_DATA=true

# ===========================================
# 监控和日志配置
# ===========================================

# 启用AI服务监控
AI_MONITORING_ENABLED=true

# 启用指标收集
COLLECT_METRICS=true

# 健康检查间隔 (毫秒)
HEALTH_CHECK_INTERVAL=60000

# 启用告警
ALERTING_ENABLED=false

# 错误阈值 (触发告警)
ERROR_THRESHOLD=10

# 响应时间阈值 (毫秒)
RESPONSE_TIME_THRESHOLD=5000

# ===========================================
# Chronicle集成配置
# ===========================================

# Chronicle服务URL
CHRONICLE_URL=http://localhost:3000

# Chronicle API密钥
CHRONICLE_API_KEY=your_chronicle_api_key_here

# 启用学习记录
LEARNING_RECORDING_ENABLED=true

# ===========================================
# 开发和调试配置
# ===========================================

# 运行环境 (development, production)
NODE_ENV=development

# 启用详细日志
AI_VERBOSE=false

# 使用模拟AI响应 (测试用)
MOCK_AI_RESPONSES=false

# 启用AI测试模式
AI_TEST_MODE=false

# 启用调试模式
DEBUG=false

# ===========================================
# 服务器配置
# ===========================================

# Changlee主服务端口
CHANGLEE_PORT=3001

# 本地AI服务端口
LOCAL_AI_PORT=8001

# Chronicle服务端口
CHRONICLE_PORT=3000

# 服务器主机地址
SERVER_HOST=0.0.0.0

# 启用CORS
CORS_ENABLED=true

# 允许的源地址
ALLOWED_ORIGINS=*

# ===========================================
# 数据库配置
# ===========================================

# 数据库文件路径
DATABASE_PATH=./data/changlee.db

# 启用数据库备份
DATABASE_BACKUP_ENABLED=true

# 备份间隔 (小时)
BACKUP_INTERVAL=24

# ===========================================
# 学习功能配置
# ===========================================

# 默认学习难度
DEFAULT_DIFFICULTY=medium

# 每日学习目标 (单词数)
DAILY_LEARNING_GOAL=20

# 复习间隔算法 (spaced_repetition, fixed)
REVIEW_ALGORITHM=spaced_repetition

# 推送通知间隔 (分钟)
PUSH_INTERVAL=60

# 启用游戏化功能
GAMIFICATION_ENABLED=true

# ===========================================
# 音乐和音效配置
# ===========================================

# 启用背景音乐
BACKGROUND_MUSIC_ENABLED=true

# 默认音量 (0-100)
DEFAULT_VOLUME=50

# 音乐文件路径
MUSIC_PATH=./assets/music

# 启用音效
SOUND_EFFECTS_ENABLED=true

# ===========================================
# UI和主题配置
# ===========================================

# 默认主题 (light, dark, auto)
DEFAULT_THEME=auto

# 启用动画效果
ANIMATIONS_ENABLED=true

# 动画速度 (slow, normal, fast)
ANIMATION_SPEED=normal

# 窗口透明度 (0-100)
WINDOW_OPACITY=95

# 启用窗口置顶
ALWAYS_ON_TOP=false