{
  "error_handling": {
    "auto_restart": true,
    "max_restart_attempts": 3,
    "restart_delay": 5000,
    "log_errors": true
  },
  "crash_recovery": {
    "save_state_on_crash": true,
    "restore_state_on_restart": true,
    "backup_interval": 300000
  },
  "memory_management": {
    "monitor_memory": true,
    "memory_threshold": 512,
    "gc_on_threshold": true
  }
}