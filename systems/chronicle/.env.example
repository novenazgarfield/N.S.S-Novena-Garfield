# Chronicle Configuration Example
# Copy this file to .env and configure your settings

# Server Configuration
PORT=3000
HOST=localhost
NODE_ENV=development

# Database Configuration
DB_PATH=./data/chronicle.db

# AI Configuration
AI_PROVIDER=gemini
AI_MODEL=gemini-pro
# AI_API_KEY=your_gemini_api_key_here
# OPENAI_API_KEY=your_openai_api_key_here

# Security Configuration
API_KEY_REQUIRED=false
# API_KEY=your_secure_api_key_here
ENABLE_CORS=true
CORS_ORIGINS=*
ENABLE_HELMET=true

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/chronicle.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Monitoring Configuration
FS_MONITOR_ENABLED=true
FS_DEBOUNCE_MS=100
WINDOW_MONITOR_ENABLED=true
WINDOW_POLL_INTERVAL=1000
CMD_MONITOR_ENABLED=true
MAX_OUTPUT_LENGTH=10000
CAPTURE_ENV=false

# AI Analysis Configuration
AI_TRIGGER_LOG_LENGTH=1000
MAX_SUMMARY_LENGTH=200
MAX_KEY_LINES=5
MAX_KEY_PHRASES=5
AI_MAX_TOKENS=2048
AI_TEMPERATURE=0.3
AI_TIMEOUT=30000

# Performance Configuration
ENABLE_COMPRESSION=true
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=5000

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Admin Configuration (for basic auth)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=chronicle123