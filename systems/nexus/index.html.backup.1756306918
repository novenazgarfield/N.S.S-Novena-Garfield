        @media (min-width: 600px) and (max-width: 900px) and (orientation: portrait) {
            .cards-grid {
                grid-template-columns: repeat(2, 1fr);
                gap: 20px;
            }

            .sidebar {
                width: 280px !important; /* 强制固定宽度 */
                min-width: 280px !important;
                max-width: 280px !important;
            }
        }

