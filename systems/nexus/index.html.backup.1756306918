        .download-footer p {
            color: var(--text-secondary);
            margin: 0;
            line-height: 1.6;
            font-size: 16px;
        }

        .download-footer .copyright {
            font-size: 14px;
            opacity: 0.7;
            margin-top: 12px;
        }

        /* 响应式设计 */
