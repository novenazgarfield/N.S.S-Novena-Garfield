                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label" data-i18n="settings.aiProvider">AI提供商</label>
                            <select class="form-select" id="providerSelect">
                                <option value="google">Google (Gemini)</option>
                                <option value="openai">OpenAI (GPT)</option>
                                <option value="claude">Anthropic (Claude)</option>
                                <option value="custom">自定义</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="form-label" data-i18n="settings.modelName">模型名称</label>
                            <select class="form-select" id="modelSelect">
                                <option value="gemini-2.0-flash-exp">Gemini 2.0 Flash (实验版)</option>
                                <option value="gemini-1.5-pro">Gemini 1.5 Pro</option>
                                <option value="gemini-1.5-flash">Gemini 1.5 Flash</option>
                            </select>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label" data-i18n="settings.apiKey">API密钥</label>
                        <input type="password" class="form-input" id="apiKeyInput" placeholder="请输入您的API密钥">
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label" data-i18n="settings.baseUrl">API端点 (可选)</label>
                        <input type="text" class="form-input" id="apiEndpointInput" placeholder="留空使用默认端点">
                    </div>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">作用域</label>
                            <select class="form-select" id="scopeSelect">
                                <option value="user">用户级别</option>
                                <option value="project">项目级别</option>
                                <option value="global">全局生效</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="form-label">优先级</label>
                            <input type="number" class="form-input" id="priorityInput" value="0" min="0" max="100">
                        </div>
                    </div>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">最大Token数</label>
                            <input type="number" class="form-input" id="maxTokensInput" value="4096" min="1" max="32768">
                        </div>
                        <div class="form-group">
                            <label class="form-label">温度参数</label>
                            <input type="number" class="form-input" id="temperatureInput" value="0.7" min="0" max="2" step="0.1">
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">描述 (可选)</label>
                        <textarea class="form-textarea" id="descriptionInput" placeholder="为这个配置添加描述..."></textarea>
                    </div>
                    
                    <div class="config-actions">
                        <button class="btn-secondary" id="testConfigBtn" data-i18n="settings.testConfig">测试连接</button>
                        <button class="btn-primary" id="saveConfigBtn" data-i18n="settings.saveConfig">保存配置</button>
                    </div>
                </div>
                
                <!-- 配置列表 -->
                <div class="config-list">
                    <h3 style="color: var(--text-primary); margin-bottom: 16px;" data-i18n="settings.savedConfigs">已保存的配置</h3>
                    <div id="configListContainer">
                        <!-- 配置项将通过JavaScript动态生成 -->
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 连接状态悬浮框 -->
    <div class="connection-status" id="connectionStatus">
        <div class="status-header">
            <div class="status-title">🔧 系统状态</div>
            <button class="status-close" onclick="hideConnectionStatus()">✕</button>
        </div>
        <div class="status-content" id="statusIndicator">
            <span class="status-dot">🔄</span>
            <span class="status-text">正在连接RAG系统...</span>
        </div>
        <div class="status-details" id="statusDetails"></div>
    </div>

</body>
</html>