        /* 🖥️ 超大屏幕优化 (1920px+) */
        @media (min-width: 1920px) {
            .cards-grid {
                grid-template-columns: repeat(5, 1fr);
                max-width: 1800px;
            }

            .content {
                max-width: 1800px;
            }
