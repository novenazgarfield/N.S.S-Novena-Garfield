        .download-btn .btn-icon {
            font-size: 28px;
        }

        .download-btn .btn-content {
            flex: 1;
            text-align: left;
        }

        .download-btn .btn-title {
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 4px;
        }

        .download-btn .btn-subtitle {
            font-size: 14px;
