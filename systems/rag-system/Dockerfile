FROM python:3.11-slim

LABEL maintainer="N.S.S-Novena-Garfield Team"
LABEL description="RAGæ™ºèƒ½ç³»ç»Ÿ - Streamlitåº”ç”¨"

# è®¾ç½®å·¥ä½œç›®å½•
WORKDIR /app

# å®‰è£…ç³»ç»Ÿä¾èµ–
RUN apt-get update && apt-get install -y \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# å¤åˆ¶requirementsæ–‡ä»¶
COPY requirements.txt* ./
COPY ../../requirements.txt ./global_requirements.txt

# å®‰è£…Pythonä¾èµ–
RUN pip install --no-cache-dir -r global_requirements.txt
RUN if [ -f requirements.txt ]; then pip install --no-cache-dir -r requirements.txt; fi

# å®‰è£…Streamlit
RUN pip install --no-cache-dir streamlit

# å¤åˆ¶åº”ç”¨ä»£ç 
COPY . .

# åˆ›å»ºå¿…è¦ç›®å½•
RUN mkdir -p models data sessions

# è®¾ç½®ç¯å¢ƒå˜é‡
ENV PYTHONPATH=/app
