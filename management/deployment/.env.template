# 🔧 N.S.S-Novena-Garfield 环境配置模板
# 复制此文件为 .env 并根据需要修改配置

# ==========================================
# 🌐 服务配置
# ==========================================

# AI服务配置
AI_SERVICE_URL=http://localhost:8001
AI_TIMEOUT=30000
AI_RETRIES=3

# Chronicle时间管理服务
CHRONICLE_URL=http://localhost:3000
CHRONICLE_TIMEOUT=30000
CHRONICLE_RETRIES=3

# RAG智能系统
RAG_SERVICE_URL=http://localhost:8501
RAG_TIMEOUT=60000
RAG_RETRIES=2

# Nexus集成管理
NEXUS_URL=http://localhost:8080
NEXUS_TIMEOUT=30000
NEXUS_RETRIES=3

# Changlee音乐播放器
CHANGLEE_WEB_PORT=8082
CHANGLEE_BACKEND_PORT=8083
CHANGLEE_TIMEOUT=30000

# ==========================================
# 🔌 端口配置
# ==========================================

# 核心服务端口
AI_PORT=8001
CHRONICLE_PORT=3000
RAG_PORT=8501
NEXUS_PORT=8080
API_MANAGER_PORT=8000

# 系统服务端口
BOVINE_PORT=8084
GENOME_PORT=8085
KINETIC_PORT=8086

# ==========================================
# 🗄️ 数据库配置
# ==========================================

# SQLite数据库
DB_PATH=/workspace/management/data/nss.db
DB_TIMEOUT=10000

# 会话存储
SESSIONS_PATH=/workspace/systems/rag-system/sessions.json
SESSIONS_BACKUP=true

# ==========================================
# 📁 路径配置
# ==========================================

# 基础路径
NSS_BASE_PATH=/workspace
LOGS_PATH=/workspace/management/logs
TEMP_PATH=/workspace/management/temp
DATA_PATH=/workspace/management/data

# ==========================================
# 🔐 安全配置
# ==========================================

# CORS配置
CORS_ENABLED=true
CORS_ORIGINS=*

# 速率限制
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# ==========================================
# 🔧 开发配置
# ==========================================

# 环境模式
NODE_ENV=development
DEBUG=false
VERBOSE=false
HOT_RELOAD=true

# ==========================================
# 🐳 Docker配置
# ==========================================

# Docker设置
DOCKER_ENABLED=true
DOCKER_NETWORK=nss-network
COMPOSE_FILE=docker-compose.yml
COMPOSE_PROJECT_NAME=nss-novena-garfield

# ==========================================
# ⚡ 性能配置
# ==========================================

# 性能阈值
RESPONSE_TIME_THRESHOLD=5000
MEMORY_LIMIT=512m
CPU_LIMIT=1.0

# ==========================================
# 🔑 API密钥 (请设置您的密钥)
# ==========================================

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# Gemini API
GEMINI_API_KEY=your_gemini_api_key_here

# DeepSeek API
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# GitHub Token (如果需要)
GITHUB_TOKEN=your_github_token_here

# ==========================================
# 📊 监控配置
# ==========================================

# 日志级别
LOG_LEVEL=info
LOG_FORMAT=json

# 监控设置
MONITORING_ENABLED=true
METRICS_PORT=9090