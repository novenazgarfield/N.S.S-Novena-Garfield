# 浏览器截图配置
# Browser Screenshot Configuration

# 是否启用自动截图 (默认关闭以节省空间)
ENABLE_SCREENSHOTS=false

# 截图保存路径
SCREENSHOT_PATH="./temp/browser_screenshots"

# 截图文件名格式
SCREENSHOT_FORMAT="screenshot_%Y%m%d_%H%M%S_%f.png"

# 最大保存截图数量 (超过此数量将删除最旧的截图)
MAX_SCREENSHOTS=50

# 截图质量 (1-100)
SCREENSHOT_QUALITY=80

# 是否在调试模式下自动启用截图
AUTO_ENABLE_IN_DEBUG=false

# 截图触发条件
# - error: 仅在错误时截图
# - action: 每次浏览器操作时截图
# - manual: 仅手动截图
SCREENSHOT_TRIGGER="error"